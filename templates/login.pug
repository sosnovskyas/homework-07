extends layout

block content

  form(action="/login" method="post").login-form
    h1 Please sign in

    .form-group
      label(for="email") Email
      input.form-control(type="email" id="email" name="email" placeholder="my@mail.com" required autofocus)
    .form-group
      label(for="password") Password
      input.form-control(type="password" id="password" name="password" required)

    button.btn.btn-lg.btn-primary.btn-block.login(type="submit") Login

  p
    a(href="/register") or register

  form(action="/login/fb" method="post").login-fb-form
    button.btn.btn-lg.btn-primary.btn-block.login(type="submit") facebook
